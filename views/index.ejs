<!DOCTYPE html>
<html lang="en">
	<head>
  	<meta charset="utf-8">
  	<meta name="description" content="Your description goes here">
  	<meta name="keywords" content="one, two, three">
		<meta name="viewport" content="width=device-width, initial-scale=1">

		<script src="https://kit.fontawesome.com/aa1a2a1c33.js" crossorigin="anonymous"></script>

		<title>Tiny Cafe</title>

		<!-- external CSS link -->
		<link rel="stylesheet" href="css/reset.css">
		<link rel="stylesheet" href="css/style.css">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">

	</head>
	<body class="container-fluid">
		<a href="/login" class="login"><button class="btn btn-primary">Barista Login</button></a>
		<main class="container" >
			<h1 class="text-center">What can I get for you?</h1>

			<div class="row justify-content-center mt-4">
			<form class="orders form-group w-50" action="/orders" method="post">
				<div class="input-group mb-3">
				  <!-- <input type="text" class="form-control" placeholder="Recipient's username" aria-label="Recipient's username" aria-describedby="basic-addon2"> -->

					<input class="form-control" type="text" name="order" placeholder="order" aria-describedby="basic-addon2">
					<input class="form-control" type="text" name="name" placeholder="name" aria-describedby="basic-addon2">
				  <div class="input-group-append">
				    <button class="btn btn-outline-warning" type="submit">New Order</button>
				  </div>
				</div>
			</form>
			</div>

			<div class="row justify-content-around mt-6">
				<section class="currentOrders col-4">
					<div class="card border-info">
					  <div class="card-body text-dark">
					    <h2 class="card-title">Orders In-Progress</h2>
							<ul>
								<% uncompletedOrders.filter(order => !order.completed).forEach((order) => {%>
									<li class="order">
										<% if(loggedIn) { %>
											<i class="far fa-check-circle complete-button" data-id="<%= order._id %>"></i>
										<% } %>
										<%= order.order %> for <%= order.name %>
									</li>
								<% }) %>
							</ul>
					  </div>
					</div>
				</section>

				<section class="completeOrders col-4">
					<div class="card border-info">
						<div class="card-body text-dark">
							<h2 class="card-title">Order Ready!</h2>
							<ul>
								<% completedOrders.filter(order => order.completed).forEach((order) => {%>
									<li class="order">
										<% if(loggedIn) { %>
											<i class="far fa-trash-alt delete-button" data-id="<%= order._id %>"></i>
										<% } %>
										<%= order.order %> for <%= order.name %>
									</li>
								<% }) %>
							</ul>
						</div>
					</div>
				</section>

			</div>
		</main>

		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
		<script type="text/javascript" src="js/main.js"></script>
	</body>
</html>
